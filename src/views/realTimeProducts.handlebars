<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Productos en tiempo real</h1>
    <div id="container">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Codigo</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody id="product-table-body">
            </tbody>
        </table>
        <div class="form-container">
            <h2>Agregar Nuevo Producto</h2>
            <form id="add-product-form">
                <div>
                    <label for="title">Nuevo Titulo</label>
                    <input type="text" id="title" name="title"  required>
                </div>
                <div>
                    <label for="description">Nueva Descripcion</label>
                    <input type="text" id="description" name="description"  required>
                </div>
                <div>
                    <label for="code">Nuevo Codigo</label>
                    <input type="text" id="code" name="code" required>
                </div>
                <div>
                    <label for="price">Nuevo Precio</label>
                    <input type="text" id="price" name="price" step="0.01" required>
                </div>
                <div>
                    <label for="stock">Stock</label>
                    <input type="number" id="stock" name="stock" required>
                </div>
                <div>
                    <label for="category">Tipo</label>
                    <input type="text" id="category" name="category" required>
                </div>
                <button type="submit">Agregar nuevo producto</button>
            </form>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/index.js"></script>
</body>
</html>